<!DOCTYPE html>
<html>
  <head>
    <title>MembersOnly</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="title has-text-centered is-size-1 p-6 has-background-black has-text-white-bis">Members Only</div>
    
    
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, class: "flashes" %>
    <% end %>

    <%= yield %>
  </body>
</html>
